.modal-background {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 10;
}

.modal-child {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.modal-x {
   position: absolute;
   top: -20px;
   right: -15px;
   cursor: pointer;
}

.modal-form-header {
  font-family: Freight,HoeflerText-Black,Times New Roman,serif;
  font-size: 40px;
  text-align: center;
}

.modal-container {
  padding: 40px 30px;
}

.modal-form {
  width: 367px;
  height: 588px;
  // background-image: url(<%= asset_path '/modal-bg.jpg' %>);
  // background-size: 367px 588px;
  // background-repeat: no-repeat;
  border: 1px solid black;
  font-family: BasisGrotesque,Avenir,Helvetica Neue,Helvetica,sans-serif;
  font-size: 13px;
  color: #FFFFFF;
  line-height: 1.5;
  display: block;
  border-radius: 25px;
  padding: 20px;
}

.modal-form input[type="text"] {
  width: 350px;
  height: 25px;
}

.modal-form input[type="password"] {
  width: 350px;
  height:25px;
}

.modal-form input[type="submit"] {
  width: 350px;
  height:50px;
  background: #59D389;
  color: #FFFFFF;
  font-family: BasisGrotesque,Avenir,Helvetica Neue,Helvetica,sans-serif;
  font-size: 18px;
}